{
	"tasks": {
		"check": "deno cache --check=all dev.ts",
		"start": "deno fmt && deno lint && deno run --unstable -A --allow-read --allow-write  --allow-env --allow-run --allow-hrtime --watch=routes/ dev.ts",
		"refresh": "deno cache --reload dev.ts",
		"db:push": "deno run -A --unstable npm:prisma db push && deno run -A --unstable npm:prisma generate --data-proxy"
	},
	"importMap": "./import_map.json",
	"lint": {
		"files": {
			"exclude": [
				"prisma/generated/",
				"node_modules/"
			]
		},
		"rules": {
			"tags": [
				"recommended"
			],
			"include": [
				"ban-untagged-todo"
			],
			"exclude": [
				"no-unused-vars"
			]
		}
	},
	"fmt": {
		"files": {
			"exclude": [
				"prisma/generated/",
				"node_modules/"
			]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	},
	"test": {
		"files": {
			"include": [
				"src/"
			],
			"exclude": [
				"src/testdata/"
			]
		}
	}
}
